{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PACT Fallback Expression Schema",
  "type": "object",
  "required": [
    "fallback_level",
    "description",
    "original_intent"
  ],
  "properties": {
    "fallback_level": {
      "type": "integer",
      "minimum": 0,
      "maximum": 4
    },
    "description": {
      "type": "string"
    },
    "original_intent": {
      "type": "object"
    }
  }
}